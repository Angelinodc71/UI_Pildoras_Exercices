<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/btnEjercicio1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Exercice 1"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnEjercicio2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnEjercicio1"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="Exercice 2"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnEjercicio3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnEjercicio2"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="Exercice 3"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnEjercicio4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnEjercicio3"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="Exercice 4"
            tools:ignore="MissingConstraints" />

        <Button
        android:id="@+id/btnEjercicio5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnEjercicio4"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text="Exercice 5"
        tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnEjercicio6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnEjercicio5"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="Exercice 6"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnEjercicio7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnEjercicio6"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="Exercice 7"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnEjercicio8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnEjercicio7"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="Exercice 8"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnEjercicio9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnEjercicio8"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="Exercice 9"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnEjercicio10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnEjercicio9"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="Exercice 10"
            tools:ignore="MissingConstraints" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>